#!/bin/bash

########################  MAIN

_echot "------- install"
packages="bless lnav net-tools pv"
# sysstat ghex
${_CMD_INS} ${packages} && _partadd "${packages}" ${_FILE_PCK} \
	|| { _echoE "Unable to install: ${packages}"; return 1; }

_echot "------- aur"
packages="wxhexeditor"
_install_aur ${packages}

if ! which imhex >/dev/null; then
	_echot "------- imhex"
	pth=/tmp
	anstmp=1.37.4-2-ArchLinux-x86_64
	_echoa "url to see available releases: https://github.com/WerWolv/ImHex/tags"
	_askno "Give the version to download imhex from github (${anstmp})"
	imhex_version=${_ANSWER:-${anstmp}}
	file=${pth}/imhex-${imhex_version}.deb
	url=https://github.com/WerWolv/ImHex/releases/download/v${imhex_version%%-*}/${file}
	_eval wget -O ${file} ${url} || _exite "Error while downloading url: ${url}"
	_evalr pacman -U ${file} || _exite "Unable to install ${file}"
fi

_echot "------- conf bless"
pth=${HOME}/.config/bless/layouts/
[ -d "${pth}" ] || mkdir -p ${pth}
cp ${_PATH_BASE}/conf/bless/* ${pth}/
