#!/bin/bash

########################  REQUIRED

pth_geany_conf=${_PATH_BASE}/conf/geany
_requirep ${pth_geany_conf}

########################  MAIN

_echot "------- install"
packages="geany git gitg openssh lnav pv squashfs-tools jq jre-openjdk"
# gitk 
${_CMD_INS} ${packages} && _partadd "${packages}" ${_FILE_PCK} \
	|| { _echoE "Unable to install: ${packages}"; return 1; }

_echot "------- geany"
pth=${HOME}/.config/geany/colorschemes
[ -d "${pth}" ] || _eval mkdir -p ${pth}
_eval cp -a ${pth_geany_conf}/* ${pth}/

_echot "------- aur"
packages="gtkhash mission-center xsysinfo"
_install_aur ${packages}
